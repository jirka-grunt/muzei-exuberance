<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference
		android:key="pref_wifi"
		android:title="@string/pref_wifi"
		android:summary="@string/pref_wifi_summary"
		android:defaultValue="true" />
	<ListPreference
		android:key="pref_interval"
		android:title="@string/pref_interval"
		android:summary="@string/pref_interval_summary"
		android:entries="@array/pref_interval_entries"
		android:entryValues="@array/pref_interval_values"
		android:defaultValue="6" />
	<ListPreference
		android:key="pref_size"
		android:title="@string/pref_size"
		android:summary="@string/pref_size_summary"
		android:entries="@array/pref_size_entries"
		android:entryValues="@array/pref_size_values"
		android:defaultValue="smaller" />
</PreferenceScreen>
